<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iei">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context="com.example.android.musicapp.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Playlists" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:background="@color/category_Artists"
            android:text="Rock"
            android:textColor="@color/white"
            android:textSize="43sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:background="@color/primary_color"
            android:paddingTop="10sp"
            android:text="Workout"
            android:textColor="@color/white"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/category_NowPlaying"
            android:paddingTop="10sp"
            android:text="Jazz"
            android:textColor="@color/white"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/category_Albums"
            android:paddingTop="10sp"
            android:text="Bollywood"
            android:textColor="@color/white"
            android:textSize="43sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="This Acitivity contains a list of playlist that user can create by himself by choosing a number of songs and then this list will be automatically be saved "
            android:textColor="@color/white"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/MainMenu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="0.04"
            app:srcCompat="@drawable/yui" />

            <ImageView
                android:layout_marginLeft="180dp"
                android:id="@+id/NowPlaying"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="0.04"
                app:srcCompat="@drawable/fin" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>

