<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maybe">


    <TextView
        android:id="@+id/Playlist1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/category_NowPlaying"
        android:padding="25dp"
        android:text="Maroon 5"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_below="@+id/Home"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:id="@+id/Playlist2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/category_Artists"
        android:padding="25dp"
        android:text="Daft Punk"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/Playlist1"
        android:layout_alignBottom="@+id/Playlist1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/Playlist4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/category_Playlists"
        android:padding="20dp"
        android:text="Arctic Monkeys"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_below="@+id/Playlist1"
        android:layout_toLeftOf="@+id/Playlist2"
        android:layout_toStartOf="@+id/Playlist2" />
       " />
    <TextView
        android:id="@+id/Playlist3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/category_Albums"
        android:padding="20dp"
        android:text="deadMau5"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/Playlist4"
        android:layout_alignBottom="@+id/Playlist4"
        android:layout_toRightOf="@+id/Playlist4"
        android:layout_toEndOf="@+id/Playlist4" />

    <ImageView
        android:id="@+id/Home"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/yui"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artists"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/NowPlaying"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/fin"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Home"
        android:layout_toEndOf="@+id/Home"
        android:layout_marginLeft="194dp"
        android:layout_marginStart="194dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="This activity will display a list of Artists that the user can choose from.This list will be stored inside the device's memory and each song will be listed according to the Artist that the user chose"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/Playlist4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>